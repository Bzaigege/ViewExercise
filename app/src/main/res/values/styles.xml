<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="fullScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="fullScreen_have_text" parent="Theme.AppCompat.DayNight.NoActionBar">
    </style>

    <style name="ActivitySwitchExplode" parent="AppTheme">
        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>
        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/activity_switch_slide</item>
        <item name="android:windowExitTransition">@transition/activity_switch_slide</item>
        <item name="android:windowReenterTransition">@transition/activity_switch_slide</item>
        <!--<item name="android:windowReturnTransition">@transitactivity_switch_explodelode</item>-->
        <!--&lt;!&ndash; specify shared element transitions &ndash;&gt;-->
        <!--<item name="android:windowSharedElementEnterTransition">-->
        <!--@transitactivity_switch_explodelode</item>-->
        <!--<item name="android:windowSharedElementExitTransition">-->
        <!--@transitactivity_switch_explodelode</item>-->
    </style>
    
    <!-- ListViewç”¨style -->
    <style name="List">
		<item name="android:background">@null</item>
		<item name="android:fadingEdge">none</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:listSelector">@android:color/transparent</item>
		<item name="android:cacheColorHint">@android:color/transparent</item>
		<item name="android:groupIndicator">@null</item>
		<item name="android:childDivider">@null</item>
		<item name="android:divider">@null</item>
		<item name="android:headerDividersEnabled">false</item>
		<item name="android:smoothScrollbar">true</item>
	</style>

</resources>
