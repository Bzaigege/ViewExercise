<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_canvas"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_margin="5dp"
                android:background="@color/tv_tips4"
                android:elevation="2dp"
                android:gravity="center"
                android:text="Canvas,Path,贝塞尔曲线" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/main_compass"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/tv_tips4"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:text="仿小米指南针" />

                <TextView
                    android:id="@+id/main_oclock"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/tv_tips4"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:text="仿小米时针" />
            </LinearLayout>


            <TextView
                android:id="@+id/main_scroller"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_margin="5dp"
                android:background="@color/tv_tips4"
                android:elevation="2dp"
                android:gravity="center"
                android:text="Scroller 使用效果研究" />

            <TextView
                android:id="@+id/main_listview_header"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_margin="5dp"
                android:background="@color/tv_tips4"
                android:elevation="2dp"
                android:gravity="center"
                android:text="ListView 下拉头部变大" />

            <TextView
                android:id="@+id/main_visible"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_margin="5dp"
                android:background="@color/tv_tips4"
                android:elevation="2dp"
                android:gravity="center"
                android:text="揭露效果,指定定制转化，曲线运动" />

            <TextView
                android:id="@+id/main_yuyin"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_margin="5dp"
                android:background="@color/tv_tips4"
                android:elevation="2dp"
                android:gravity="center"
                android:text="寺库语音搜素 使用效果研究" />

            <TextView
                android:id="@+id/main_radar_search"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_margin="5dp"
                android:background="@color/tv_tips4"
                android:elevation="2dp"
                android:gravity="center"
                android:text="点击  雷达搜索" />

            <TextView
                android:id="@+id/main_radar_wave"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_margin="5dp"
                android:background="@color/tv_tips4"
                android:elevation="2dp"
                android:gravity="center"
                android:text="水波纹  雷达搜索" />

            <TextView
                android:id="@+id/main_slow_scroll"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_margin="5dp"
                android:background="@color/tv_tips4"
                android:elevation="2dp"
                android:gravity="center"
                android:text="listview item 缓动效果" />

            <TextView
                android:id="@+id/main_toolbar"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_margin="5dp"
                android:background="@color/tv_tips4"
                android:elevation="2dp"
                android:gravity="center"
                android:text="Toolbar 研究" />

            <TextView
                android:id="@+id/main_statusbar"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_margin="5dp"
                android:background="@color/tv_tips4"
                android:elevation="2dp"
                android:gravity="center"
                android:text="Statusbar 研究" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>