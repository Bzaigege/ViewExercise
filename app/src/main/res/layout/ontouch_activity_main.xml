<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ontouche_normal"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_margin="5dp"
        android:background="@color/tv_tips4"
        android:elevation="2dp"
        android:gravity="center"
        android:text="Activity->ViewGroup->View" />

    <TextView
        android:id="@+id/ontouche_recycler"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_margin="5dp"
        android:background="@color/tv_tips4"
        android:elevation="2dp"
        android:gravity="center"
        android:text="Activity->RecyclerView->View" />

    <TextView
        android:id="@+id/ontouche_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_margin="5dp"
        android:background="@color/tv_tips4"
        android:elevation="2dp"
        android:gravity="center"
        android:text="Activity->RecyclerView->ScrollView->View" />

</LinearLayout>